# ‚ö†Ô∏è IMPORTANT: Copy this file to .env and .env.production, then fill with your values
# NEVER commit actual .env files to Git!

# Database Configuration
DB_HOST=mysql
DB_PORT=3306
DB_NAME=otobook_saas
DB_USER=otobook_user

# üîê CHANGE THESE IN PRODUCTION - Generate with: openssl rand -base64 32
DB_PASSWORD=change_this_to_strong_password
MYSQL_ROOT_PASSWORD=change_this_to_strong_password

# Application Configuration
NODE_ENV=development
PORT=3001

# üîê JWT Secret - Generate with: openssl rand -base64 64
JWT_SECRET=change_this_to_strong_secret_key

# API Configuration
API_URL=http://localhost:3001
FRONTEND_URL=http://localhost:3000

# Optional: Email Configuration
MAIL_HOST=smtp.gmail.com
MAIL_PORT=587
MAIL_USER=your-email@gmail.com
MAIL_PASSWORD=your-app-password

# Optional: Monitoring & Analytics
LOG_LEVEL=info
DEBUG=false

# Optional: Third-party services
STRIPE_SECRET_KEY=sk_test_xxx
SENDGRID_API_KEY=SG.xxx

# Production-only settings
SSL_CERT_PATH=/etc/nginx/certs/cert.pem
SSL_KEY_PATH=/etc/nginx/certs/key.pem
